<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @diary.description %></h1>
    </div>

    <div class="row">
      <div class="col-md-12">
        <span><%= @diary.created_at %> </span>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= link_to '新增代辦事項', new_diary_task_path(@diary), class: "btn btn-primary"%>
      </div>
    </div>


  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>代辦事項</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td>title = <%= task.title %></td>
              <td>description = <%= task.description %></td>
              <td>checked = <%= task.is_checked.to_s %></td>
              <td><%= render_check_task_btn(task) %></td>
              <td><%= link_to 'Edit', edit_task_path(task) %></td>
              <td><%= link_to 'Delete', diary_task_path(@diary, task), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>



</div>
