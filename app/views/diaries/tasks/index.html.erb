<h1>odd daily report</h1>

<div class="create-task-button-wrapper">
  <%= link_to '建立新代辦事項', new_task_path, class: 'create-button' %>
</div>

<section class="task-wrapper">
  <div class="section-title">列表</div>
  <div class="task-list-wrapper">
    <ul>
      <% @tasks.each do |task|%>
        <li class"restaurant-unit">
          <span class="name"><%= task.title %></span>
          <span class="divider">|</span>
          <span class="address"><%= task.description %></span>
          <span class="divider">|</span>

          <%= link_to 'edit',
                      edit_task_path(task),
                      class: 'edit-button' %>

          <%= link_to 'delete',
                      task_path(task),
                      method: :delete,
                      class: 'delete-button' %>

        </li>
      <% end %>
    </ul>
  </div>
</section>
