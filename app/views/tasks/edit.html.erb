<header>
<h1>編輯代辦事項</h1>
</header>

<div class="edit-task-wrapper">
  <%= form_for @task do |f| %>
    <div class="name-textfield">
      <span><%= f.label :title %></span>
      <span><%= f.text_field :title %></span>
    </div>
    <div class="address-textfield">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="submit-button">
      <%= f.submit "確認修改" %>
    </div>
  <% end %>
</div>


